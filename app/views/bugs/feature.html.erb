<%= render 'shared/page_title', title: "Listing All Features" %>

<br>

<% if @features.count == 0 %>
    <p>
        No Feature <%= "created" if !qa? %> yet!
    </p>
<% else %>
    <ul>
        <div class="col-lg-8 col-md-8 col-sm-7 col-xs-6 padding-zero container">
            <ul class=”pagination”>
                <li class="disabled"> 
                    <%= will_paginate(@features, previous_label: "&laquo;", next_label: "&raquo;", outer_window: 1, inner_window: 0, class: "small-font justify-content-center" ) %>
                </li>
            </ul>
        </div>
        <% @features.each do |feature| %>
        <li>
            <div class="container">
                <div>
                    <span class="container">
                        <h6>
                            Feature Title:
                        </h6>
                        <em>
                            <%= link_to feature.title, project_bug_path(feature) %>
                        </em>
                    </span>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Deadline</th>
                            <th>Status</th>
                            <th>Project Name</th>
                            <th>Project Developer's</th>
                            <th>Project QA's</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <%= truncate(feature.description, length: 150) %>
                            </td>
                            <td>
                                <%= feature.deadline %>
                            </td>
                            <td>
                                <%= feature.bug_status %>
                            </td>
                            <td>
                                <%= link_to feature.project.name, feature.project %>
                            </td>
                            <td>
                                <ul>
                                    <% feature.project.users.where(user_type: "Developer").each do |dev| %>
                                        <li>
                                            <%= dev.name.capitalize %>
                                        </li>
                                    <% end%>
                                </ul>
                            </td>
                            <td>
                                <ul>
                                    <% feature.project.users.where(user_type: "QA").each do |qa| %>
                                        <li>
                                            <%= qa.name.capitalize %>
                                        </li>
                                    <% end%>
                                </ul>
                            </td>

                            <% if (Bug.find_by(assign_id: current_user.id) || !developer?) %>
                                <td>
                                    <%= link_to pluralize(Project.find(feature.project.id).bugs.count, "bug and feature"), project_bugs_path(feature.project), :project_id => feature.project.id %>
                                    <%#= link_to Project.find(feature.project.id).bugs.count.to_s + " feature's", project_bugs_path(feature.project), :project_id => feature.project.id %>
                                </td>
                            <% end %>

                            <% if false && manager? %>
                                <td>
                                    <div>
                                        <small>
                                            <%= link_to "Edit this Project", edit_project_path(feature.project) if manager? %> 
                                            <%= link_to ('Delete this project'), feature.project, data: { "turbo-method": :delete, turbo_confirm: "Are you sure you want to delete '#{feature.project.name.capitalize}' project?" }, class: "btn btn-xs" if manager? %>
                                        </small>
                                    </div>
                                </td>
                            <% end %>

                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="seperator">
                <br>
            </div>
                        
        </li>
        <% end %>
        <div class="col-lg-8 col-md-8 col-sm-7 col-xs-6 padding-zero container">
            <ul class=”pagination”>
                <li class="disabled"> 
                    <%= will_paginate(@features, previous_label: "&laquo;", next_label: "&raquo;", outer_window: 1, inner_window: 0, class: "small-font justify-content-center" ) %>
                </li>
            </ul>
        </div>
    </ul>
<% end %>
