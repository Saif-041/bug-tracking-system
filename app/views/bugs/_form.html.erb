
<%= form_for @bug do |f| %>
    <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true %>
    </div>
    <br>
    <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description %>
    </div>
    <br>
    <div class="field">
        <%= f.label :deadline %><br />
        <%= f.datetime :deadline %>
    </div>
    <br>
    <div class="field">
        <%= f.label :screenshot %><br />
        <%= f.text_field :screenshot %>
    </div>
    <br>
    <div class="field">
        <%= f.label :type %><br />
        <%= f.select :type, ['Feature','Bug'] %>
    </div>
    <br>
    <div class="field">
        <%= f.label :status %><br />
        <%= f.text_field :status %>
    </div>
    <br>
    <div class="field">
        <%= f.label :assign_id, "Assign To:" %><br />
        <%= f.text_field :assign_id %>
    </div>
    <br>
    <div class="field">
        <%= f.label :created_id, "Created By:" %><br />
        <%= f.text_field :created_id %>
    </div>
    <br>

    <div class="actions">
        <%= f.submit(@project.new_record? ? "Create Bug" : "Update Bug") %>
    </div>
<% end %>