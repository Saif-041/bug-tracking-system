<%= form_for @bug, url: project_bugs_path do |f| %>
    <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true %>
    </div>
    <br>
    <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description %>
    </div>
    <br>
    <div class="field">
        <%= f.label :deadline, "Set Deadline" %><br />
        <%= f.date_select :deadline %>
    </div>
    <br>
    <div class="field">
        <%= f.label :screenshot, "Add Screenshot" %><br />
        <%= f.file_field :screenshot, multiple: true %>
    </div>
    <br>
    <div class="field bug_type" id="bug_type" data-controller="bug">
        <%= f.label :bug_type, "Bug Type" %><br />
        <%= f.select :bug_type, ['Feature','Bug'] %>
    </div>
    <br>

    <% if is_developer? %>
        <div class="field bug_status" id="bug_status" data-controller="bug">
            <%= f.label :bug_status, "Bug Type" %><br />
            <%= f.select :bug_status, ['New','Started', 'Completed'] %>
        </div>
        <br>
    <% end %>
    
    <% if @bug.new_record? %>
        <div class="field">
            <%= f.label :assign_id, "Assign To:" %><br />
            <%= f.collection_select :assign_id, @devs, :id, :name do |cs| %>
                <%= cs.label :name %>
            <% end %>
        </div>
        <br>
    <% end %>
    
    <div class="actions">
        <%= f.submit(@bug.new_record? ? "Create Bug" : "Update Bug") %>
    </div>
<% end %>

<br>
<%= link_to "Back to Bugs listing", project_bugs_path(@bug.project) %>