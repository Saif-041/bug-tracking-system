<h3 align="center">Project Details</h3>
<div class="container-fluid">
    <hr/>
</div>
<br>

<%#  %>
<div class="container">
  <h2>
    <span>
            <strong>
                Project Name: 
            </strong>
            <em>
                <%= @project.name %>
            </em>
        </span>
  </h2>
  <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Project Developer's</th>
        <th>Project QA's</th>
        <% if is_manager? %>
            <th></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <ul>
                    <% @project.users.where(user_type: "Developer").each do |dev| %>
                        <li>
                            <%= dev.name.capitalize %>
                        </li>
                    <% end%>
                </ul>
            </td>
            <td>
                <ul>
                    <% @project.users.where(user_type: "QA").each do |qa| %>
                        <li>
                            <%= qa.name.capitalize %>
                        </li>
                    <% end%>
                </ul>
            </td>
            <% if is_manager? %>
            <td>
                <div>
                    <span>
                        <%= link_to "Edit this Project", edit_project_path(@project) if is_manager? %>
                    </span>
                    <span>
                        <%= link_to ('Delete this project'), @project, data: { "turbo-method": :delete, turbo_confirm: "Are you sure you want to delete #{@project.name.capitalize} project?" }, class: "btn btn-xs" if is_manager? %>
                    </span>
                </div>
            </td>
            <% end %>
      </tr>
    </tbody>
  </table>
</div>

